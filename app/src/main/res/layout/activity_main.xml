<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gbr1"
    tools:context="com.iqra.iqra.MainActivity">

    <TextView
        android:id="@+id/Judul"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:textSize="10pt"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageButton
        android:id="@+id/btnHijaiyah"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@drawable/btn_hijaiyah" />

    <ImageButton
        android:id="@+id/btnIqro"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_iqro"
        android:layout_below="@+id/btnHijaiyah"
        android:layout_marginTop="29dp"  />

    <ImageButton
        android:id="@+id/btnLatihan"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_latihan"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnIqro"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:id="@+id/btnAbout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_about"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="26dp" />

    <ImageButton
        android:id="@+id/btnKeluar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_keluar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
